        android:id="@+id/btnResultadoTotal"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/anchodoble"
        android:layout_height="@dimen/alto"
        android:layout_marginEnd="@dimen/margen"
        android:background="@drawable/diseno_boton_operadores"
        android:text="="
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnNumberZero" />

    <Button
        android:id="@+id/btnNumberZero"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:background="@drawable/diseno_boton_numeros"
        android:text="0"
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintEnd_toStartOf="@+id/btnResultadoTotal"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toEndOf="@+id/btnDeleteNumber"
        app:layout_constraintTop_toTopOf="@+id/btnDeleteNumber" />

