        android:layout_width="335dp"
        android:layout_height="190dp"
        android:layout_marginStart="@dimen/margen"
        android:layout_marginTop="@dimen/margen"
        android:layout_marginEnd="@dimen/margen"
        android:layout_marginBottom="@dimen/margen"
        android:background="@drawable/diseno_boton_numeros"
        android:textAlignment="textEnd"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btnParentesisLeft"
        app:layout_constraintEnd_toEndOf="parent"
