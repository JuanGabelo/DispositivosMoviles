        app:layout_constraintTop_toTopOf="@+id/btnNumberTwo" />

    <Button
        android:id="@+id/btnSuma"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:layout_marginEnd="@dimen/margen"
        android:background="@drawable/diseno_boton_operadores"
        android:text="+"
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnNumberThree" />

