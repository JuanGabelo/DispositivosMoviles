        android:layout_marginBottom="@dimen/margen"
        android:background="@drawable/diseno_boton_numeros"
        android:text="4"
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintBottom_toTopOf="@+id/btnNumberOne"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNumberEight"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:layout_marginStart="20dp"
        android:background="@drawable/diseno_boton_numeros"
        android:text="8"
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintStart_toEndOf="@+id/btnNumberSeven"
        app:layout_constraintTop_toTopOf="@+id/btnNumberSeven" />

    <Button
        android:id="@+id/btnNumberNine"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:background="@drawable/diseno_boton_numeros"
