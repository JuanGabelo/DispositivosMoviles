        app:layout_constraintTop_toTopOf="@+id/btnNumberEight" />

    <Button
        android:id="@+id/btnMultiplicacion"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:layout_marginEnd="@dimen/margen"
        android:background="@drawable/diseno_boton_operadores"
        android:text="X"
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnNumberNine" />

    <Button
        android:id="@+id/btnNumberSeven"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:layout_marginStart="@dimen/margen"
        android:layout_marginBottom="@dimen/margen"
        android:background="@drawable/diseno_boton_numeros"
        android:text="7"
        android:textSize="@dimen/tamanoNumeros"
