        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnParentesisRight"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:layout_marginStart="20dp"
        android:background="@drawable/diseno_boton_operadores"
        android:text=")"
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintStart_toEndOf="@+id/btnParentesisLeft"
        app:layout_constraintTop_toTopOf="@+id/btnParentesisLeft" />

    <Button
        android:id="@+id/btnDeleteAll"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:background="@drawable/diseno_boton_operadores"
        android:text="AC"
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintEnd_toStartOf="@+id/btnDivision"
        app:layout_constraintStart_toEndOf="@+id/btnParentesisRight"
        app:layout_constraintTop_toTopOf="@+id/btnParentesisRight" />

    <Button
        android:id="@+id/btnDivision"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:layout_marginEnd="@dimen/margen"
        android:background="@drawable/diseno_boton_operadores"
        android:text="รท"
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnDeleteAll" />

    <Button
        android:id="@+id/btnNumberFive"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:layout_marginStart="20dp"
        android:background="@drawable/diseno_boton_numeros"
        android:text="5"
        android:textSize="@dimen/tamanoNumeros"
        app:layout_constraintStart_toEndOf="@+id/btnNumberFowr"
        app:layout_constraintTop_toTopOf="@+id/btnNumberFowr" />

    <Button
        android:id="@+id/btnNumberSix"
