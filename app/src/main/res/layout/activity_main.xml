        app:layout_constraintStart_toEndOf="@+id/btnNumberFive"
        app:layout_constraintTop_toTopOf="@+id/btnNumberFive" />

    <Button
        android:id="@+id/btnResta"
        style="@style/Widget.AppCompat.Button"
